@import "/style/icon-font.wxss";

.top {
  height: 200rpx;
  /* background-color: tomato; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}

.top .background {
  width: 750rpx;
  height: 200rpx;
  position: absolute;
  left: 0;
  top: 0;
  filter: blur(50rpx);
}

.top .header {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  border: 2rpx solid #d4237a;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 20rpx;
}

.top .nickName {
  color: #d4237a;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 150rpx;
}

.questionDesc {
  width: 100%;
  height: 300rpx;
  box-sizing: border-box;
  padding: 10rpx;
}



.location::before {
  color: tomato;
}

.location {
  font-size: 36rpx;
  border: 1rpx solid gainsboro;
  padding: 20rpx;
  color: #707070;
}

.location .more {
  float: right;
}

.imageList {
  /* height: 450rpx; */
  display: flex;
  flex-wrap: wrap;
}

.imageWrap {
  margin: 10rpx;
  width: 230rpx;
  height: 230rpx;
  border: 1px dashed #707070;
  box-sizing: border-box;
  text-align: center;
  line-height: 230rpx;
  position: relative;
}

.imageWrap .close {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  background-color: #000;
  color: white;
  opacity: 0.5;
  top: 0;
  right: 0;
  font-size: 50rpx;
  box-sizing: border-box;
}

.imageWrap image {
  width: 100%;
  height: 100%;
}

.icon-add {
  color: #707070;
  font-size: 80rpx;
}

.publishBar {
  width: 100%;
  height: 80rpx;
  background-color: white;
  position: fixed;
  display: flex;
  left: 0;
  bottom: 0;
  border-top: 1px dashed #d4237a;
}

.publishBar .notice {
  flex: 1;
  line-height: 80rpx;
  text-align: right;
  color: #707070;
  padding-right: 20rpx;
}

.publishBar button {
  height: 80rpx;
  line-height: 80rpx;
  margin-right: 20rpx;

}
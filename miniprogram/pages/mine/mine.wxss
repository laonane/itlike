/* pages/mine/mine.wxss */
@import "/style/icon-font.wxss";

.back {
  width: 100vw;
  height: 90vw;
  filter: blur(30rpx);
  margin: 0 auto;
}

.header {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  box-sizing: border-box;
  border: 6rpx solid #fff;
  overflow: hidden;
  position: absolute;
  top: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 10;
}

.nick-name {
  position: absolute;
  text-align: center;
  top: 260rpx;
  left: 50%;
  transform: translateX(-50%);
  color: #222;
  font-size: 40rpx;
  z-index: 10;
}

.pane {
  width: 100%;
  height: 150rpx;
  position: absolute;
  top: 200rpx;
  background-color: rgba(255, 255, 255, 0.6);
  z-index: 5;
}

.menus {
  width: 100%;
  height: 300rpx;
  position: absolute;
  top: 360rpx;
}

.share-mp {
  width: 100%;
  height: 100rpx;
  position: absolute;
  top: 570rpx;
  /* background-color: rgba(255, 255, 255, 0.6); */
}

.cell {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  position: relative;
  margin-bottom: 4rpx;
  color: #333;
  font-size: 32rpx;
  background-color: rgba(255, 255, 255, 0.6);
  padding-left: 20rpx;
  box-sizing: border-box;
}

.cell::before {
  font-size: 50rpx;
  color: #d4237a;
  vertical-align: middle;
}

.cell .more {
  position: absolute;
  right: 20rpx;
}